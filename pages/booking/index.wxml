<!--pages/booking/index.wxml-->

<view class="weui-panel weui-panel_access">
  <view class="weui-panel__bd">
    <view class="weui-media-box weui-media-box_appmsg">
      <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
        <image class="avatar weui-media-box__thumb" src="http://homeal.com.hk/img/sample/5/host5.png" />
      </view>
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="chef_name weui-media-box__title">小路私房菜</view>
      </view>
    </view>
  </view>
</view>

<form report-submit bindsubmit="orderSubmit">
  <view class="weui-cells weui-cells_after-title">

    <view class="weui-cell weui-cell_access">
      <view class="weui-cell__hd">
        <image src="{{icon.menu}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">套餐:</view>

      <view class="weui-cell__bd">
        <picker bindchange="bindMenuChange" value="{{menuIndex}}" range="{{menu}}">
          <view class="weui-cell__ft weui-cell__ft_in-access">{{menu[menuIndex]}}</view>
        </picker>
      </view>
    </view>

    <navigator url="/pages/booking/date/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="{{icon.date}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">日期:</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">选择日期</view>
    </navigator>

    <view class="weui-cell weui-cell_access">
      <view class="weui-cell__hd">
        <image src="{{icon.menu}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">人数:</view>

      <view class="weui-cell__bd">
        <picker bindchange="bindPeopleChange" value="{{peopleIndex}}" range="{{people}}">
          <view class="weui-cell__ft weui-cell__ft_in-access">{{people[peopleIndex]}}</view>
        </picker>
      </view>
    </view>


  </view>

  <view class="price weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">总价:</view>
      <view class="weui-cell__ft">￥168</view>
    </view>
  </view>

  <view class="notice weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="（如果您有其他要求，可以通过备注告诉私厨，最多50字）" style="height: 3.3em" />
        <view class="weui-textarea-counter">0/50</view>
      </view>
    </view>
  </view>

  <button formType="submit" class="submit-button weui-btn">提交订单</button>

</form>