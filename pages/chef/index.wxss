/* pages/chef/index.wxss */
@import '/components/menu_card/index.wxss';
@import '/components/comment_card/comment_card.wxss';

.banner {
  width: 750rpx;
  height: 420rpx;
}

.banner-image {
  width: 750rpx;
}

.page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__title {
  color: #e64340;
}

.weui-navbar__slider {
  width: 250rpx;
  background-color: #e64340;
}

.menu_img {
  width: 100%;
  height: 368rpx;
}

.nav-panel {
  margin: 0 16px;
  -webkit-overflow-scrolling: touch;
}

.booking{
  width: 100%;
  height:80rpx;
  line-height:80rpx;
  background-color:#E64340;
  color:white;
  text-align:center;

}

.chef {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: top;
  -webkit-align-items: top;
  align-items: top;
}

.avatar {
  border-radius: 60px;
  margin-top: 5px;
}

.desc {
  color: #999;
  font-size: 13px;
  line-height: 1.2;
}

.label {
  margin-top: 10px;
}

.icon {
  float: right;
  margin-top: 5px;
  height: 17px;
  line-height: 17px;
  align-content: center;
  align-items: center;
}

.chat-icon, .favor-icon {
  float: right;
  margin-right: 7rpx;
}

.chat-text, .favor-text {
  float: right;
  margin-right: 28rpx;
  font-size: 14px;
  color: #999;
}

.chef_name {
  color: #e64340;
}

