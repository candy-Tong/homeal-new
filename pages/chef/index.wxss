/* pages/chef/index.wxss */
@import '/components/menu_card/index.wxss';

.banner {
  width: 750rpx;
  height: 420rpx;
}

.banner-image {
  width: 750rpx;
}

.avatar {
  border-radius: 60px;
}

.desc {
  color: #999;
  font-size: 13px;
  line-height: 1.2;
}

.label {
  margin-top: 0;
  margin-left: 90px;
}

.page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.weui-navbar__title {
  color: #E64340;
}

.weui-navbar__slider {
  width: 250rpx;
  background-color: #E64340;
}

.menu_img {
  width: 100%;
  height: 368rpx;
}

.nav-panel {
  margin: 0 16px;
  -webkit-overflow-scrolling: touch;
}

.icon {
  position: absolute;
  top: 20px;
  right: 0;
  margin-right: 15px;
  height: 17px;
  line-height: 17px;
}

.chat-icon, .favor-icon {
  float: right;
  margin-right: 7rpx;
}
.chat-text,.favor-text{
  float: right;
  margin-right: 28rpx;
  font-size: 14px;
  color:#999;
}